@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@model DoAnLTWEB.Models.NguoiDung

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Thông tin cá nhân</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/styleLesson.css" rel="stylesheet">
</head>
<body>
    <div class="container-xl px-4 mt-4">
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Ảnh đại diện</div>
                    <div class="card-body text-center">
                        <img class="img-account-profile rounded-circle mb-2" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS785biEGWYfQ3kCbvts_QRuNPn7IJpvovN4A&usqp=CAU" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">Thông tin tài khoản</div>
                    <div class="card-body">
                        <form action="/User/EditProfile" method="post">
                            <input type="hidden" name="MaND" value="@Html.DisplayFor(model => model.MaND)" />
                            <input type="hidden" name="MatKhau" value="@Html.DisplayFor(model => model.MatKhau)" />
                            <input type="hidden" name="MatKhau" value="@Html.DisplayFor(model => model.MatKhau)" />
                            <div class="mb-3">
                                <label class="small mb-1" for="inputUsername">Tên người dùng</label>
                                <input name="TenND" value="@Html.DisplayFor(model => model.TenND)" readonly class="form-control" type="text" placeholder="Tên người dùng" />
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputFirstName">Họ Tên</label>
                                    <input name="HoTen" value="@Html.DisplayFor(model => model.HoTen)" class="form-control" id="inputFirstName" type="text" placeholder="Họ tên" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputLastName">Email</label>
                                    <input name="Email" value="@Html.DisplayFor(model => model.Email)" class="form-control" id="inputLastName" type="email" placeholder="Email" required />
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputPhone">Số điện thoại</label>
                                    <input name="DienThoai" value="@Html.DisplayFor(model => model.DienThoai)" class="form-control" id="inputPhone" type="tel" placeholder="Số điện thoại" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputBirthday">Ngày sinh</label>
                                    <input name="NgaySinh" value="@String.Format("{0:MM/dd/yyyy}", Model.NgaySinh)" class="form-control" id="inputBirthday" type="text" placeholder="Ngày sinh" required />
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Sửa</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
