@model List<DoAnLTWEB.Models.KhoaHoc>
@{
    ViewBag.Title = "AdminCourse";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div style="position:relative;top:35px">
    <h2>Quản lý khóa học</h2>

    <p>
        @Html.ActionLink("Thêm khóa học", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                Mã Khóa học
            </th>
            <th>
                Tên Khóa học
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKH)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { MaSP = item.MaKH }) |
                    @Html.ActionLink("Xóa", "Delete", new { MaSP = item.MaKH })
                </td>
            </tr>
        }
    </table>

</div>
