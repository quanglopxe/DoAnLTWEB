<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-white" style="position:fixed;top:0;z-index:2;width:100%">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index"><img src="~/Content/Images/logo.png" alt="CourseLogo" style="width:350px;height:40px" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/Course">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Roadmap/Roadmap">Lộ trình</a>
                    </li>
                    @if (Session["User"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Register">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Login">Đăng nhập</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/EditProfile">Thông tin cá nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Logout">Đăng xuất</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="">Liên hệ</a>
                    </li>
                    @Html.Action("MyCoursesPartial", "MyCourses")
                </ul>
                <form class="d-flex">
                    <input class="form-control" type="text" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" style="margin-left: 5px; margin-right:5px;" viewBox="0 0 16 16" style="">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </button>
                    </div>
                    <div class="dropdown">
                        <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown">
                            Languages
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Tiếng Anh</a></li>
                            <li><a class="dropdown-item" href="#">Tiếng Việt</a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div class="container-fluid bg-light">
        <div class="row">

            <div class="col-2 p-0 mt-4">
                <ul class="list-group" style="list-style-type: none; position: fixed; top: 65px; left: 0; z-index: 1;">
                    @Html.Action("SideBar","Course")
                    
                </ul>
            </div>
            <div class="col-9 p-0 mt-4" style="min-height:300px; margin-left: 50px; margin-right: 50px;">
                <div style="margin-top: 10px">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer class="container-fluid text-center text-white" style="background-color:burlywood;position:relative;top:300px">
        <h2 style="margin: 0;">
            TÊN ĐỒ ÁN: WEBSITE KHÓA HỌC LẬP TRÌNH
        </h2>
        <b style="margin: 0;">
            Tên thành viên:
        </b>
        <ul>
            <li>Dương Thuận Quang - 2001216070</li>
            <li>Vũ Mạnh Hùng - 2001210227 </li>
            <li>Trần Hữu Phúc - 2001210271</li>
            <li>Đỗ Anh Thi - 2001216169</li>
        </ul>
    </footer>
</body>
</html>
